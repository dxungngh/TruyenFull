<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/tab_layout_margin_top"
    tools:context=".screen.main.MainActivity">

    <android.support.design.widget.TabLayout
        android:id="@+id/fragment_main_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:weightSum="2">

        <android.support.design.widget.TabItem
            android:id="@+id/fragment_main_tab_layout_button_new_books"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_books"/>

        <android.support.design.widget.TabItem
            android:id="@+id/fragment_main_tab_layout_button_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/history"/>
    </android.support.design.widget.TabLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_main_book_list_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_main_tab_layout"/>
</RelativeLayout>